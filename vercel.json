{
  "builds": [
    {
      "src": "your-flask-app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "build": {
    "env": {
      "JAVA_HOME": "/path/to/java"
    }
  },
  "routes": [
    {
      "src": "/.*",
      "dest": "your-flask-app.py"
    }
  ]
}
